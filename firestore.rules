rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Regla maestra: Permitir todo a usuarios autenticados
    // (En producción restringiremos más, pero esto desbloquea tu desarrollo ahora)
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}