rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // =========================================================
    // üõ°Ô∏è HELPERS SEGUROS
    // =========================================================

    function isAuthenticated() {
      return request.auth != null;
    }

    // VERSI√ìN SEGURA: Verifica que el documento exista antes de pedir .data
    function getUserData() {
      let userPath = /databases/$(database)/documents/users/$(request.auth.uid);
      return exists(userPath) ? get(userPath).data : {};
    }

    // Obtiene el rol de forma segura, manejando nulos y may√∫sculas
    function getUserRole() {
      let data = getUserData();
      return (data != null && 'role' in data) ? data.role.lower() : '';
    }

    function isAdmin() {
      return isAuthenticated() && getUserRole() == 'admin';
    }

    function isReception() {
      return isAuthenticated() && getUserRole() == 'recepcion';
    }

    function isKitchen() {
      return isAuthenticated() && getUserRole() == 'cocina';
    }

    // =========================================================
    // üìÇ REGLAS
    // =========================================================

    match /users/{userId} {
      // Permitir al usuario leer SU PROPIO perfil para el login
      allow read: if isAuthenticated() && (request.auth.uid == userId || isAdmin());
      allow write: if isAdmin();
    }

    match /orders/{orderId} {
      // Lectura abierta a autenticados (necesario para KDS)
      allow read: if isAuthenticated();
      // Crear: Admin o Recepci√≥n
      allow create: if isAdmin() || isReception();
      // Actualizar: Cocina (cambiar estado) o Recepci√≥n/Admin
      allow update: if isAuthenticated(); 
      // Borrar: Solo Admin
      allow delete: if isAdmin();
    }

    // ... Resto de tus reglas para menuItems, tables, etc. ...
    match /menuItems/{docId} { allow read: if isAuthenticated(); allow write: if isAdmin(); }
    match /categories/{docId} { allow read: if isAuthenticated(); allow write: if isAdmin(); }
    match /ingredients/{docId} { allow read: if isAuthenticated(); allow write: if isAdmin(); }
    match /flavors/{docId} { allow read: if isAuthenticated(); allow write: if isAdmin(); }
    match /sizes/{docId} { allow read: if isAuthenticated(); allow write: if isAdmin(); }
    match /combos/{docId} { allow read: if isAuthenticated(); allow write: if isAdmin(); }
    match /combo_instances/{docId} { allow read: if isAuthenticated(); allow create: if isAdmin() || isReception(); }
    
    match /tables/{tableId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin() || isReception();
    }

    match /cashFlow/{docId} {
      allow read, write: if isAdmin() || isReception();
    }
    
    match /system_settings/{docId} { allow read, write: if isAdmin(); }
    match /rules/{docId} { allow read, write: if isAdmin(); }
    match /systemInfo/{docId} { allow read, write: if isAdmin(); }
  }
}